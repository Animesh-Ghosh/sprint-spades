<%= turbo_frame_tag "modal" do %>
  <div class="modal fade" id="edit-issue-modal" tabindex="-1" aria-labelledby="edit-issue-modal" data-controller="modal" data-action="turbo:before-render@document->modal#hideBeforeRender">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="edit-issue-label">Edit issue <%= @issue.id %></h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" data-controller="clipboard">
           <%= render 'issues/form', { game_room: @game_room, issue: @issue } %>
        </div>
      </div>
    </div>
  </div>
<% end %>