<%= turbo_frame_tag "modal" do %>
  <div class="modal fade" id="new-issue-modal" tabindex="-1" aria-labelledby="new-issue-modal" aria-hidden="true" data-controller="modal" data-action="turbo:before-render@document->modal#hideBeforeRender">
    <div class="modal-dialog modal-dialog-centered modal-lg">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="new-issue-label">New Issue</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body" data-controller="clipboard">
          <%= render 'issues/form', { game_room: @game_room, issue: @game_room.issues.new } %>
        </div>
      </div>
    </div>
  </div>
<% end %>