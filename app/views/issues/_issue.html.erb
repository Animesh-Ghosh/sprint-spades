<%= turbo_frame_tag dom_id(issue) do %>
  <li class="list-group-item d-flex justify-content-between align-items-start <%= issue_active?(game_room, issue) %>">
    <div class="ms-2 me-auto">
      <div class="fw-bold"><%= issue.title %></div>
      <%= issue.description %>
    </div>
  </li>
<% end %>