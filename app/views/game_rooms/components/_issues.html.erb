<%= turbo_frame_tag game_room, "issues" do %>
  <div class="card">
    <div class="card-header">
      Issues
    </div>
    <%= turbo_stream_from game_room, "issues" %>
    <div class="card-body">
      <ul class="list-group">
        <%= turbo_frame_tag "issues" do %>
          <% issues.recent.each do |issue| %>
            <%= render issue, { game_room: game_room } %>
          <% end %>
        <% end %>
        <li class="list-group-item">
          <%= render 'game_rooms/components/new_issue', { game_room: game_room } %>
        </li>
      </ul>
    </div>
  </div>
<% end %>